<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet permission for streaming -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <!-- Permission for posting notifications (Android 13 and above) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"> <!-- Optional if using Multi-Dex -->

        <!-- MainActivity to play and record streams -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <receiver android:name=".NotificationReceiver"
            android:enabled="true"
            android:exported="false" /> <!-- This receiver will be triggered by AlarmManager -->

        <!-- Ensure your app has a notification channel for devices running Android 8.0 and above -->
        <service android:name=".NotificationService" android:enabled="true" android:exported="false"/>

        <!-- StreamListActivity as the launcher activity -->
        <activity
            android:name=".StreamListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ScheduleActivity for managing schedules -->
        <activity
            android:name=".ScheduleActivity"
            android:exported="true" />

    </application>

</manifest>
